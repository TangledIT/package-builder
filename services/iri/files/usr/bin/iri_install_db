#!/bin/bash

if [[ ! $1 == "-f" ]]
then
    echo "Install Mainnet db"
    echo "------------------"
    echo "Installing the database will wipe your current database."
    read -p "Are you sure? [Yy/Nn] " -n 1 -r
    echo
fi

if [[ $REPLY =~ ^[Yy]$ ]] || [[ $1 == "-f" ]]
then
    # Stop iri
    echo "Stopping IRI.."
    systemctl stop iri &> /dev/null

    # Remove current database
    echo "Removing current database"
    rm -rf /var/lib/iri/db/*
    mkdir -p /var/lib/iri/db

    # Download database
    echo "Downloading database.. this could take a while"
    curl http://downloads.tangled.it/mainnet-db.tar.gz -# --output /tmp/db.tar.gz

    # Extracting database
    echo "Extracting database"
    tar -C /var/lib/iri/db/ -zxf /tmp/db.tar.gz

    # Setting permissions
    echo "Changing permissions for database files"
    chown -R iota:iota /var/lib/iri/db/

    # Cleaning up
    echo "Cleaning up"
    rm /tmp/db.tar.gz

    # Starting IRI
    echo "Starting IRI"
    systemctl start iri &> /dev/null

    echo "Done!"
fi
